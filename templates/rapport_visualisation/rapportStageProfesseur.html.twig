{% extends 'base.html.twig' %}

{% block title %}Rapport des Stagiaires{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% block tilteH1 %}
            <h1 class="text-center">
                <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Rapport des Stage et leurs Professeur</a>
            </h1>
        {% endblock %} 
        <table class="table table-hover table-bordered">
            <thead style="background-color: #007bff; color: white;">
                <tr>
                    <th scope="col">Professeur</th>
                    <th scope="col">Matières</th>
                    <th scope="col">Stages</th>
                </tr>
            </thead>
            <tbody>
            {% for idx, professeur in professeurs %}
                <tr>
                    <td class="text-center">{{ professeur.professeur.nom }}</td>
                    <td>
                        <ul class="list-unstyled mb-0">
                            {% for matiere in professeur.matieres %}
                                <li>• {{ matiere.libelle }}</li>
                            {% endfor %}
                        </ul>
                    </td>

                    <td>
                        <ul class="list-unstyled mb-0">
                            {% for matiere in professeur.matieres %}
                                {% for stage in matiere.stages %}
                                    <li>• {{ stage.libelle }}</li>
                                {% endfor %}
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucun stagiaire trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
