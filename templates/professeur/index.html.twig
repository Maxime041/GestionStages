{% extends 'base.html.twig' %}

{% block title %}Professeur index{% endblock %}

{% block body %}

    {% block tilteH1 %}
        <h1 class="text-center">
            <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Professeur index</a>
        </h1>
    {% endblock %} 

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td>{{ professeur.id }}</td>
                <td>{{ professeur.matricule }}</td>
                <td>{{ professeur.nom }}</td>
                <td>{{ professeur.prenom }}</td>
                <td>
                    <a href="{{ path('app_professeur_show', {'id': professeur.id}) }}">show</a>
                    <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professeur_new') }}">Create new</a>
{% endblock %}
