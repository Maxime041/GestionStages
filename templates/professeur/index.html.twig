{% extends 'base.html.twig' %}

{% block title %}Professeur Index{% endblock %}

{% block tilteH1 %}
    <h1 class="text-center">
        <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Gestion des Professeurs</a>
    </h1>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end mb-4">
        <a href="{{ path('app_professeur_new') }}" class="btn btn-success">
            Ajouter un nouveau professeur
        </a>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Matricule</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for professeur in professeurs %}
                    <tr>
                        <td>{{ professeur.id }}</td>
                        <td>{{ professeur.matricule }}</td>
                        <td>{{ professeur.nom }}</td>
                        <td>{{ professeur.prenom }}</td>
                        <td>
                            <a href="{{ path('app_professeur_show', {'id': professeur.id}) }}" class="btn btn-info btn-sm"> Voir</a>
                            <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}" class="btn btn-warning btn-sm"> Modifier</a>
                            <a href="{{ path('app_professeur_delete', {'id': professeur.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce professeur ?')">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun professeur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
