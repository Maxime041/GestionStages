{% extends 'base.html.twig' %}

{% block title %}Matiere index{% endblock %}

{% block body %}
    {% block tilteH1 %}
        <h1 class="text-center">
            <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Matiere index</a>
        </h1>
    {% endblock %} 
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
                <td>{{ matiere.id }}</td>
                <td>{{ matiere.code }}</td>
                <td>{{ matiere.libelle }}</td>
                <td>
                    <a href="{{ path('app_matiere_show', {'id': matiere.id}) }}">show</a>
                    <a href="{{ path('app_matiere_edit', {'id': matiere.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_matiere_new') }}">Create new</a>
{% endblock %}
