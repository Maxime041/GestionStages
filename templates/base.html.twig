<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    <header class="p-4 bg-secondary text-white mb-4">
        <div class="container">
           {% block tilteH1 %}
                <h1 class="text-center">
                    <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Institution</a>
                </h1>
           {% endblock %} 
            <br>
            <nav class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_stage_index') }}" class="btn btn-outline-light">Gestion Stage</a>
                            <a href="{{ path('app_stagiaire_index') }}" class="btn btn-outline-light">Gestion Stagiaire</a>
                            <a href="{{ path('app_matiere_index') }}" class="btn btn-outline-light">Gestion Matiere</a>
                            <a href="{{ path('app_professeur_index') }}" class="btn btn-outline-light">Gestion Professeur</a>
                            <a href="{{ path('app_rapport_visualisation_stage_inscription') }}" class="btn btn-outline-light">Stagiaire et Inscription</a>
                            <a href="{{ path('app_rapport_visualisation_stage_professeur') }}" class="btn btn-outline-light">Stage et Professeur</a>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-light">Connexion</a>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-light">Inscription</a>
                    {% endif %}
                </div>
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="btn btn-success" style="float: right;" >Mon Compte</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger" style="float: right;" >Déconnexion</a>
                {% endif %}
            </nav>
        </div>
    </header>
    <main class="container py-4">
        {% block body %}
        {% endblock %}
    </main>
    <footer class="bg-secondary p-4 text-center text-light mt-auto fixed-bottom">
        <div class="container">
            <p>&copy; - IPSSI - 2025 - MAXIME DANINO </p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYkCq36toKtQIYSGoZ8lt9cLf9T/9CUGz9FwxAIVWbzzRlnQ2dxA3VsmI" crossorigin="anonymous"></script>
    {% block javascripts %}
    {% endblock %}
</body>
</html>
