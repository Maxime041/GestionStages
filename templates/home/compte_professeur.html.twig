{% extends 'base.html.twig' %}

{% block title %}Mon Compte - Professeur{% endblock %}
{% block tilteH1 %}
    <h1 class="text-center">
        <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Mon Compte - Professeur</a>
    </h1>
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="row mt-4">
            <div class="col-12">
                <h2>Mes Matières</h2>
                <div class="row">
                    {% for matiere in matieres %}
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">{{ matiere.libelle }} ({{ matiere.code }})</h5>

                                    <h6 class="mt-3">Stages associés :</h6>
                                    {% if matiere.stages is not empty %}
                                        <ul class="list-group">
                                            {% for stage in matiere.stages %}
                                                <li class="list-group-item">
                                                    <strong>{{ stage.libelle }}</strong> ({{ stage.code }})<br>
                                                    Début : {{ stage.dateDebut|date('d/m/Y') }}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <div class="alert alert-warning" role="alert">
                                            Aucun stage associé à cette matière.
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-warning" role="alert">
                                Aucun matière trouvée.
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
