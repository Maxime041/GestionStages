{% extends 'base.html.twig' %}

{% block title %}Stagiaire index{% endblock %}

{% block body %}
    {% block tilteH1 %}
        <h1 class="text-center">
            <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Stagiaire index</a>
        </h1>
    {% endblock %} 
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Code</th>
                <th>Ville</th>
                <th>DateInscription</th>
                <th>Stages</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stagiaire in stagiaires %}
            <tr>
                <td>{{ stagiaire.id }}</td>
                <td>{{ stagiaire.nom }}</td>
                <td>{{ stagiaire.adresse }}</td>
                <td>{{ stagiaire.code }}</td>
                <td>{{ stagiaire.ville }}</td>
                <td>{{ stagiaire.dateInscription ? stagiaire.dateInscription|date('Y-m-d') : '' }}</td>
                <td>
                {% for idx, st in stagiaire.stages %}
                    {{ st.libelle }}
                    {% if stagiaire.stages | length > idx + 1 %} - {% endif %}
                {% endfor %}
            </td>  
                <td>
                    <a href="{{ path('app_stagiaire_show', {'id': stagiaire.id}) }}">show</a>
                    <a href="{{ path('app_stagiaire_edit', {'id': stagiaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stagiaire_new') }}">Create new</a>
{% endblock %}
